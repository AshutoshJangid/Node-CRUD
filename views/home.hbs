<div class="row">
    <div class="col-6"><h1>Users</h1></div>
    <div class="col-6 d-flex justify-content-end"><a href="/adduser" type="button" class="btn btn-primary align-self-center">+ Add User</a></div>
</div>
<table class="table table-dark table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
      {{#each rows}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.fname}}</td>
      <td>{{this.lname}}</td>
      <td>{{this.email}}</td>
      <td>{{this.phone}}</td>
      <td>
          <a href="/viewuser/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-eye"></i></a>
          <a href="/edituser/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i></a>
          <a href="/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-person-x"></i></a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>